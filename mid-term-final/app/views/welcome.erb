<div class="container-fluid padnav">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-capitalize text-center text-red">Hey <%= @user.first_name %>!
                <br>
                Pick your <em>poison</em>.
            </h1>
        
        </div>
    </div>
                
    <form action='/choice' method="POST">
        <div class="sports row">
            <div class="col-xs-4 col-md-offset-3 col-md-2 col-lg-offset-3 col-lg-2 sports">
            <button type="submit" name="sport_id" value=1 class="transparent">
                    <img class="icon" src="../../img/sports/badminton.svg">
                </button>
            </div>

        <div class="col-xs-4 col-md-2 col-lg-2 sports">
            <button type="submit" name="sport_id" value=2 class="transparent">
                <img class="icon" src="../../img/sports/basketball.svg">
            </button>
        </div>

        <div class="col-xs-4 col-md-2 col-lg-2 sports">
            <button type="submit" name="sport_id" value=3 class="transparent">
                <img class="icon" src="../../img/sports/biking.svg">
            </button>
        </div>

        <div class="sports row">
            <div class="col-xs-offset-2 col-xs-4 col-md-offset-4 col-md-2 col-lg-offset-4 col-lg-2 sports">
                <button type="submit" name="sport_id" value=4 class="transparent">
                    <img class="icon" src="../../img/sports/pingpong.svg">
                </button>
            </div>

            <div class="col-xs-4 col-md-2 col-lg-2 sports">
                <button type="submit" name="sport_id" value=5 class="transparent">
                    <img class="icon" src="../../img/sports/tennis.svg">
                </button>
            </div>
        </div>
    </form>
</div>

    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="../../js/jquery.js"></script>
    <script src="../../js/bootstrap.min.js"></script>
